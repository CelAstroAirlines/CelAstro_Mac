<section class="text-gray-600 body-font bg-indigo-800 mt-28">
  <div class="container px-5 py-24 mx-auto ">

    <div class="flex justify-center bg-indigo-900 w-full rounded-t-lg p-10 ">
      <div class="flex flex-wrap -mx-4 mt-auto mb-auto lg:w-full sm:w-2/3 content-start sm:pr-10 ">
        <div class="w-full sm:p-4 px-4 mb-6">
          <h1 class="title-font font-medium text-xl mb-2 text-orange-300">Hi, <%= @user.email%></h1>
          <div class="leading-relaxed text-beige-50">上一次登入：</div>
        </div>
        <div class="p-4 sm:w-1/2 lg:w-1/4 w-1/2">
          <h2 class="title-font font-medium text-md text-beige-50">會員卡級</h2>
          <p class="leading-relaxed text-orange-300">TRAVELER</p>
        </div>
        <div class="p-4 sm:w-1/2 lg:w-1/4 w-1/2">
          <h2 class="title-font font-medium text-md text-beige-50">卡及效期</h2>
          <p class="leading-relaxed text-orange-300">永久</p>
        </div>
        <div class="p-4 sm:w-1/2 lg:w-1/4 w-1/2">
          <h2 class="title-font font-medium text-md text-beige-50">AstroMiles ID</h2>
          <p class="leading-relaxed text-orange-300"><%= current_user.id%></p>
        </div>     
      </div>

      <div class="lg:w-2/6 sm:w-1/3 w-full rounded-lg overflow-hidden mt-6 sm:mt-0">
        <%= image_tag 'membership_card.png' %>
      </div>
    </div>

    <div class="flex flex-wrap bg-orange-50">
      <div class="xl:w-1/4 lg:w-1/2 md:w-full px-8 py-6 border-l-2 border-gray-200 border-opacity-60">
        <h2 class="text-lg sm:text-xl text-gray-900 font-medium title-font mb-2">獎勵哩程</h2>
        <span class="leading-relaxed text-base mb-4 text-orange-800 ">1000</span>哩
        <p class="mt-4">0 獎勵里程即將在6個月內到期</p>
      </div>
      <div class="xl:w-1/4 lg:w-1/2 md:w-full px-8 py-6 border-l-2 border-gray-200 border-opacity-60">
        <h2 class="text-lg sm:text-xl text-gray-900 font-medium title-font mb-2">晉升資格計算</h2>
        <span class="leading-relaxed text-base mb-4 text-orange-800">0</span>哩
        <p class="mt-4">需要累積30000卡級里程</p>  
      </div>
      <div class="xl:w-1/4 lg:w-1/2 md:w-full px-8 py-6 border-l-2 border-gray-200 border-opacity-60">
        <h2 class="text-lg sm:text-xl text-gray-900 font-medium title-font mb-2">續卡資格計算</h2>
        <span class="leading-relaxed text-lg mb-4 text-orange-800">永久</span>  
      </div>
    </div>
  </div>
</section>
