<section class="text-gray-600 body-font ">
  <div class="container mx-auto flex flex-wrap items-center	">

    <div class=" md:w-1/2 bg-orange-50 p-28  md:ml-auto w-full	 md:mt-0 rounded-md ">
      <div class="w-28 h-28 mx-auto ">
        <%= image_tag 'membership_logo.png' %>
      </div>
      <%# <h1 class="title-font font-medium text-3xl text-gray-900 text-center ">Experience CelAstro Airlines Membership </h1> %>
      <p class="leading-relaxed mt-5 text-center pt-11">一同體驗
        星辰航空會員方案</p>    
    </div>

    <div class=" md:w-1/2 bg-beige-50  p-10 flex flex-col md:ml-auto w-full md:mt-0 rounded-md">
      <h2 class="text-gray-900 text-lg font-medium title-font mb-10">會員登入</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="relative mb-4 ">

          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "電子信箱", class:'w-full bg-white rounded border border-gray-500 focus:border-gray-300 focus:ring-2 focus:ring-yellow-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out my-5'%>

          <%= f.password_field :password, autocomplete: "current-password", placeholder: "密碼",
          class:'w-full bg-white rounded border border-gray-500 focus:border-gray-300 focus:ring-2 focus:ring-yellow-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out' %>
   
        <div class="pt-5 text-right ">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "忘記密碼?", new_password_path(resource_name) %><br />
          <% end %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :"記住我的電子信箱" %>
          </div>
        <% end %>
        <div class="flex justify-between ">
          <div class="text-brown-500 text-xl  hover:text-brown-800 mt-8">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "加入CelAstro >", new_registration_path(resource_name) %>
          <% end %>
          </div>
          <div><button class="text-white bg-brown-500 mr-0 mt-8 border-0 py-1 px-10 focus:outline-none hover:bg-brown-800 rounded text-lg "><%= link_to '登入', new_user_session_path %></button></div>
        </div>
      </div>  
    <% end %> 
    </div>
   

  </div>
</section>



    
        
       
  
      

