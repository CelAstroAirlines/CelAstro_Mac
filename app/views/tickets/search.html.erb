                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                    </select>
                  </td>
                  <button class="inline-flex items-center justify-center h-12 px-6 font-medium tracking-wide text-white transition duration-100 bg-gray-900 rounded-lg hover:bg-gray-800 focus:shadow-outline focus:outline-none mt-4">
                    <%= link_to "加入購物車", add_cart_index_path(ticket.id), method: "post" %>
                  </button>
                </tr>  
              <%# end %>
            </tbody>
          </Table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>



  