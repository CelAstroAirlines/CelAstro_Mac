
    <div data-controller = "seat" data-seat-target="seat_info" data-action="click->seat#check" data-seat_id="<%= f.id %>"
    data-ticket_id="<%= f.ticket_id%>">
      <% if f.vaccant? %>  
        <img src="/images/black_seat_big.png">
      <% elsif f.occupied? %>
        <% if @user_id == f.user_id%>
          <img src="/images/green_seat.png">
        <%else%>
          <img src="/images/red_seat_big.png">          
        <% end %>
      <%else%>
        <img src="/images/full_black_seat.png">
      <% end %>
    </div>
